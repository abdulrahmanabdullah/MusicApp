<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="abdulrahmanjavanrd.com.musicbook_demo2.MainActivity">

    <TextView
        android:textSize="25sp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/linear"
        android:layout_width="wrap_content"
        android:id="@+id/txv"
        android:layout_height="wrap_content"
        android:text="@string/choiceTypeListen"
         />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:clickable="true"
                android:id="@+id/imgInternal"
                android:src="@drawable/ic_internal_3"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <TextView
                android:gravity="center"
                android:textStyle="italic"
                android:paddingStart="10dp"
                android:layout_alignEnd="@id/imgInternal"
                android:layout_alignStart="@id/imgInternal"
                android:layout_alignBottom="@id/imgInternal"
               android:layout_alignTop="@id/imgInternal"
                android:textColor="#fff"
                android:text="@string/internalMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:layout_weight="0"
            android:layout_marginStart="24dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="24dp"
            android:background="@color/colorPrimary"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgRaw"
                android:src="@drawable/ic_internal_1"
                android:layout_width="150dp"
                android:layout_height="150dp" />

            <TextView
                android:gravity="center"
                android:paddingStart="8dp"
                android:layout_alignEnd="@id/imgRaw"
                android:layout_alignRight="@id/imgRaw"
                android:layout_alignTop="@id/imgRaw"
                android:layout_alignBottom="@id/imgRaw"
               android:text="@string/globalMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
